<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:focusable="true"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true"
    android:background="@color/background_f3f3f3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/view_simple_topbar"/>
    <EditText
        android:id="@+id/drugstoreneed_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/height_200"
        android:layout_marginTop="@dimen/margin_25"
        android:layout_marginLeft="@dimen/height_45"
        android:layout_marginRight="@dimen/height_45"
        android:padding="@dimen/margin_15"
        android:textCursorDrawable="@null"
        android:hint="请填写您的药品需求，可以输入您最近急需的3-5种药品"
        android:textColorHint="@color/black_99"
        android:textSize="@dimen/textsize_18"
        android:textColor="@color/black_66"
        android:gravity="left|top"
        android:maxLength="250"
        android:background="@drawable/edit_text_white"/>
</LinearLayout>